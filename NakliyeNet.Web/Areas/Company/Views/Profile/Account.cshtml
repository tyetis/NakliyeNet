@using NakliyeNet.Domain.Entity
@model Company
@{
    ViewData["Title"] = "Hesabım";
}
<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <h2 class="page-title">
                    Hesabım
                </h2>
            </div>
        </div>
    </div>
</div>
<div class="page-body">
    <div class="container-xl">
        <div class="card">
            <div class="row g-0">
                <div class="col-3 d-none d-md-block border-end">
                    <div class="card-body">
                        <div class="list-group list-group-transparent">
                            <a href="/company/profile/account" class="list-group-item list-group-item-action d-flex align-items-center active"><i class="fa fa-user"></i>&nbsp; Hesap Bilgilerim</a>
                            <a href="/company/profile/vehicle" class="list-group-item list-group-item-action d-flex align-items-center"><i class="fa fa-truck"></i>&nbsp; Araçlarım</a>
                            <a href="/company/profile/team" class="list-group-item list-group-item-action d-flex align-items-center"><i class="fa fa-users"></i>&nbsp; Ekibim</a>
                        </div>
                    </div>
                </div>
                <div class="col d-flex flex-column">
                    <form method="post" enctype="multipart/form-data">
                        <div class="card-body">
                            <h2 class="mb-4">Hesabım</h2>
                            <h3 class="card-title">Profil Fotoğrafı</h3>
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    <span id="avatar" class="avatar avatar-xl" style="background-image:url(@Model.LogoUrl)"></span>
                                </div>
                                <div class="col-auto">
                                    <button class="btn" type="button" onclick="$('#imageFile').click()">Resmi Değiştir</button>
                                    <input id="imageFile" name="LogoImage" type="file" accept=".jpg,.jpeg" hidden />
                                </div>
                            </div>
                            <h3 class="card-title mt-4">Hesap Bilgileri</h3>
                            <div class="row g-3">
                                <div class="col-md">
                                    <div class="form-label">Name</div>
                                    @Html.TextBoxFor(n => n.Name, new { @class = "form-control" })
                                </div>
                                <div class="col-md">
                                    <div class="form-label">Email</div>
                                    @Html.TextBoxFor(n => n.Email, new { type = "email", @class = "form-control" })
                                </div>
                                <div class="col-md">
                                    <div class="form-label">Password</div>
                                    @Html.TextBoxFor(n => n.Password, new { type = "password", @class = "form-control" })
                                </div>
                            </div>
                            <div class="row g-3 mt-3">
                                <div class="col-md">
                                    <div class="form-label">Adres</div>
                                    @Html.TextBoxFor(n => n.Address, new { @class = "form-control" })
                                </div>
                                <div class="col-md">
                                    <div class="form-label">Hakkında</div>
                                    @Html.TextAreaFor(n => n.Description, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent mt-auto">
                            <div class="btn-list justify-content-end">
                                <a href="#" class="btn">
                                    İptal
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    Kaydet
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $("#imageFile").change(function () {
            showThumbnail(this, $("#avatar"))
        })
    </script>
}