@using TransportationApp.Domain.Entity
@model CompanyTeam
@{
    ViewData["Title"] = "Ekibim";
}
<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <h2 class="page-title">
                    Hesabım
                </h2>
            </div>
        </div>
    </div>
</div>
<div class="page-body">
    <div class="container-xl">
        <div class="card">
            <div class="row g-0">
                <div class="col-3 d-none d-md-block border-end">
                    <div class="card-body">
                        <div class="list-group list-group-transparent">
                            <a href="/company/profile/account" class="list-group-item list-group-item-action d-flex align-items-center">Hesap Bilgilerim</a>
                            <a href="/company/profile/vehicle" class="list-group-item list-group-item-action d-flex align-items-center">Aracım</a>
                            <a href="/company/profile/team" class="list-group-item list-group-item-action d-flex align-items-center active">Ekibim</a>
                        </div>
                    </div>
                </div>
                <div class="col d-flex flex-column">
                    <form method="post">
                        <div class="card-body">
                            <h3 class="card-title mt-4">Hesap Bilgileri</h3>
                            <div class="row g-3">
                                <div class="col-md">
                                    <div class="form-label">Şoför Adı</div>
                                    @Html.TextBoxFor(n => n.Driver, new { @class = "form-control" })
                                </div>
                                <div class="col-md">
                                    <div class="form-label">Şoför Tel</div>
                                    @Html.TextBoxFor(n => n.DriverPhoneNumber, new { @class = "form-control" })
                                </div>
                                <div class="col-md">
                                    <div class="form-label">Ekip Hakkında</div>
                                    @Html.TextAreaFor(n => n.TeamDescription, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent mt-auto">
                            <div class="btn-list justify-content-end">
                                <a href="#" class="btn">
                                    İptal
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    Kaydet
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>