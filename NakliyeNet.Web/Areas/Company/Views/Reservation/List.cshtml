@using TransportationApp.Domain.Entity;
@using TransportationApp.Domain.Models.Common;
@model PaginationResult<Reservation>
@{
    ViewData["Title"] = "Reservasyonlarım";
}
<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <h2 class="page-title">
                    Reservasyonlarım
                </h2>
            </div>
        </div>
    </div>
</div>
<div class="page-body">
    <div class="container-xl">
        <div class="card">
            <div class="card-body p-0">
                <div id="table-default" class="table-responsive">
                    <table class="table table-hover" style="vertical-align:middle">
                        <thead>
                            <tr>
                                <th><button class="table-sort" data-sort="sort-name">Reservasyon Id</button></th>
                                <th><button class="table-sort desc" data-sort="sort-type">Talep</button></th>
                                <th><button class="table-sort desc" data-sort="sort-type">Üye</button></th>
                                <th><button class="table-sort" data-sort="sort-score">Reservasyon Tarihi</button></th>
                            </tr>
                        </thead>
                        <tbody class="table-tbody">
                            @foreach (var t in Model.Data)
                            {
                                <tr>
                                    <td class="sort-name">#@t.Id</td>
                                    <td class="sort-city"><a href="/company/requests/detail/@t.RequestId">@t.Request.Category.Name</a></td>
                                    <td>@t.Request.User.Name @t.Request.User.Surname</td>
                                    <td class="sort-score">@t.ReservationDate.ToShortDateString()</td>
                                </tr>
                            }
                        </tbody>
                        @if (Model.Data.Count == 0)
                        {
                            <tfoot>
                                <tr>
                                    <td colspan="7">
                                        <div class="empty">
                                            <div class="empty-icon">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                    <circle cx="12" cy="12" r="9" />
                                                    <line x1="9" y1="10" x2="9.01" y2="10" />
                                                    <line x1="15" y1="10" x2="15.01" y2="10" />
                                                    <path d="M9.5 15.25a3.5 3.5 0 0 1 5 0" />
                                                </svg>
                                            </div>
                                            <p class="empty-title">Henüz Reservasyonun Yok</p>
                                        </div>
                                    </td>
                                </tr>
                            </tfoot>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
