@using NakliyeNet.Domain.Entity
@using NakliyeNet.Domain.Models.Common
@model PaginationResult<Company>
@{
    ViewData["Title"] = "Nakliye Şirketleri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col">
                <h2 class="page-title">
                    Nakliye Şirketleri
                </h2>
            </div>
        </div>
    </div>
</div>
<div class="page-body">
    <div class="container-xl">
        <div class="row row-cards">
            @foreach (var c in Model.Data)
            {
                <div class="col-md-6 col-lg-3">
                    <div class="card">
                        <div class="card-body p-4 text-center">
                            <span class="avatar avatar-xl mb-3 rounded" style="background-image: url(@c.LogoUrl)"></span>
                            <h3 class="m-0 mb-1"><a href="/profile/company/@c.Id">@c.Name</a></h3>
                            <div class="text-muted">@(c.Address ?? "-")</div>
                            <div class="mt-3">
                                <partial name="Components/Rating" model="Convert.ToInt32(c.CompanyComments.Select(n => n.Rating).DefaultIfEmpty().Average())" />
                            </div>
                        </div>
                        <div class="d-flex">
                            <a href="/user/message/list/@c.Id" class="card-btn">
                                <!-- Download SVG icon from http://tabler-icons.io/i/mail -->
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon me-2 text-muted" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z"></path><path d="M3 7l9 6l9 -6"></path></svg>
                                Mesaj
                            </a>
                            <a href="/profile/company/@c.Id" class="card-btn">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon me-2 text-muted" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                    <circle cx="12" cy="7" r="4"></circle>
                                    <path d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2"></path>
                                </svg>
                                Profil
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>