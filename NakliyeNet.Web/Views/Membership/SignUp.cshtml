@using NakliyeNet.Domain.Models.Membership
@model SignUpModel
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Üye Hesabı Oluştur</title>
    <!-- CSS files -->
    <link href="/css/tabler.min.css?1684106062" rel="stylesheet" />
    <link href="/css/tabler-flags.min.css?1684106062" rel="stylesheet" />
    <link href="/css/tabler-payments.min.css?1684106062" rel="stylesheet" />
    <link href="/css/tabler-vendors.min.css?1684106062" rel="stylesheet" />
    <link href="/css/demo.min.css?1684106062" rel="stylesheet" />
    <style>
      @@import url('https://rsms.me/inter/inter.css');
      :root {
      	--tblr-font-sans-serif: 'Inter Var', -apple-system, BlinkMacSystemFont, San Francisco, Segoe UI, Roboto, Helvetica Neue, sans-serif;
      }
      body {
      	font-feature-settings: "cv03", "cv04", "cv11";
      }
    </style>
</head>
<body class=" d-flex flex-column">
    <script src="/js/demo-theme.min.js?1684106062"></script>
    <div class="page page-center">
        <div class="container container-normal py-4">
            <div class="row align-items-center g-4">
                <div class="col-md-5">
                    <div class="text-center mb-4">
                        <a href="/" class="navbar-brand navbar-brand-autodark"><img src="/static/logo.png" height="36" alt=""></a>
                    </div>
                    <form class="card card-md" method="post" autocomplete="off" novalidate>
                        <div class="card-body">
                            <h2 class="card-title text-center mb-4">Üye Hesabı Oluştur</h2>
                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger">
                                    @Html.ValidationSummary()
                                </div>
                            }
                            <div class="mb-3">
                                <label class="form-label">İsim</label>
                                @Html.TextBoxFor(n => n.Name, new { @class = "form-control", placeholder = "İsim", required = "" })
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Soyisim</label>
                                @Html.TextBoxFor(n => n.SurName, new { @class = "form-control", placeholder = "Soyisim", required = "" })
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                @Html.TextBoxFor(n => n.Email, new { @class = "form-control", placeholder = "Email", required = "", type = "email" })
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Şifre</label>
                                <div class="input-group input-group-flat">
                                    @Html.TextBoxFor(n => n.Password, new { @class = "form-control", placeholder = "Password", required = "", type = "password" })
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Tekrar Şifre</label>
                                <div class="input-group input-group-flat">
                                    @Html.TextBoxFor(n => n.AgainPassword, new { @class = "form-control", placeholder = "Tekrar Password", required = "", type = "password" })
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-check">
                                    <input type="checkbox" name="aggred" class="form-check-input" required />
                                    <span class="form-check-label"><a href="" tabindex="-1">Kullanıcı sözleşmesnini</a> kabul ediyorum.</span>
                                </label>
                            </div>
                            <div class="form-footer">
                                <button type="submit" class="btn btn-primary w-100">Kayıt Ol</button>
                            </div>
                        </div>
                    </form>
                    <div class="text-center text-muted mt-3">
                        Zaten hesabın var mı? <a href="/membership/login" tabindex="-1">Giriş Yap</a>
                    </div>
                </div>
                <div class="col-md-7 d-none d-lg-block">
                    <img src="/static/illustrations/signup.png" height="350" class="d-block mx-auto" />
                </div>
            </div>
        </div>
    </div>
    <!-- Libs JS -->
    <!-- Tabler Core -->
    <script src="/js/tabler.min.js?1684106062" defer></script>
    <script src="/js/demo.min.js?1684106062" defer></script>
</body>
</html>